<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_evaluation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jenle.interviewapp.evaluate.view.EvaluationActivity"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:visibility="gone"
        />

    <fragment
        android:name="com.jenle.interviewapp.evaluate.view.EvaluationFragment"
        android:id="@+id/evaluation_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
